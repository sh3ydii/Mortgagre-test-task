generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model MortgageProfile {
  id                 Int      @id @default(autoincrement())
  propertyPrice      Float
  downPaymentAmount  Float
  matCapitalAmount   Float?
  loanTermYears      Int
  interestRate       Float
  loanAmount         Float 
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  MortgageCalculations MortgageCalculation[]
}

model MortgageCalculation {
  id                   Int       @id @default(autoincrement())
  mortgageProfileId    Int
  monthlyPayment       Float
  totalPayment         Float
  totalOverpaymentAmount Float
  possibleTaxDeduction Float
  savingsDueMotherCapital Float
  recommendedIncome    Float
  paymentSchedule      Json
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  MortgageProfile      MortgageProfile @relation(fields: [mortgageProfileId], references: [id])
}
